{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "stdio-to-ws",
  "version": "0.1.3",
  "publishConfig": {
    "access": "public"
  },
  "description": "Bridge stdio processes to WebSocket connections",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/marimo-team/stdio-to-ws"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write",
    "build": "tsc",
    "test": "echo 'No tests'",
    "prepublishOnly": "pnpm run typecheck && pnpm run build",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "websocket",
    "stdio",
    "bridge",
    "process"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.3.1",
    "@types/ws": "^8.18.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "typescript": "^5.7.3"
  },
  "bin": {
    "stdio-to-ws": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "module": "./dist/main.js",
  "lint-staged": {
    "*.ts": [
      "biome check --write",
      "biome format --write"
    ]
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "string-argv": "^0.3.2",
    "ws": "^8.18.3"
  }
}
